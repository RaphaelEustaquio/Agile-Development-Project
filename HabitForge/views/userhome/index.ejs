<!DOCTYPE html>
<html>
<head>
    <title>User Page</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('../partials/top-navbar', { pageTitle: 'User Home', currentPage: 'userhome' }) %>
    <div class="container">
        <% if (user) { %>
            <h1>Welcome, <%= user.name %>!</h1>
            <div class="habit-container">
              <% user.habits.forEach((habit) => { %>
                <div class="habit <%= habit.status %>" onclick="location.href='userhome/edit-habit/<%= habit.id %>'">
                  <div class="habit-content">
                    <%= habit.name %>
                    <% if (habit.checkedIn) { %>
                      <div class="checked-in">Checked-In <span class="checkmark">&#10003;</span></div>
                    <% } else { %>
                      <form action="/userhome/check-in/<%= habit.id %>" method="post" class="check-in-form">
                        <button type="submit" class="check-in-btn">Check In</button>
                      </form>
                    <% } %>
                  </div>
                </div>
              <% }) %>
              </div>
        <% } else { %>
            <h1>Welcome, please log in or register.</h1>
            <a href="/login">Login</a> | <a href="/register">Register</a>
        <% } %>
        <button id="add-habit-btn" onclick="location.href='/add-habit'">Add Habit</button>
    </div>
    <%- include('../partials/navbar') %>
</body>
</html>
