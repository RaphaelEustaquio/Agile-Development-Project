<!DOCTYPE html>
<html>
<head>
    <title>User Page</title>
    <style>
        a:hover span {
            font-size: 1.2em; /* Increase font size by 20% when hovered */
            transform: scale(1.2); /* Scale the icon by 20% when hovered */
        }
        a > span {
            text-decoration: none; /* Remove underline from icon */
            display: inline-block; /* Allow fixed width and height */
            width: 20px; /* Set fixed width */
            height: 20px; /* Set fixed height */
            overflow: hidden; /* Hide any overflow from scaling */
        }
    </style>
</head>
<body>
    <% if (user) { %>
        <h1>Welcome, <%= user.name %>!</h1>
        <form action="/logout" method="get">
            <button type="submit">Log Out</button>
        </form>
        <!-- Add habit tracking functionality here -->
        <h2>Habits</h2>
        <form action="/add-habit" method="post">
            <label for="habit">New Habit</label>
            <input type="text" name="habit" required>
            <button type="submit">Add Habit</button>
        </form>
        <ul>
            <% user.habits.forEach((habit) => { %>
                <li>
                    <%= habit.name %> 
                    <a href="userhome/edit-habit/<%= habit.id %>"><span>ðŸ”§</span></a>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <h1>Welcome, please log in or register.</h1>
        <a href="/login">Login</a> | <a href="/register">Register</a>
    <% } %>
</body>
</html>
