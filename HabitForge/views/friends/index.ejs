<!DOCTYPE html>
<html>
<head>
    <title>My Friends</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <%- include('../partials/top-navbar', { pageTitle: 'My Friends' }) %>
    <div class="container">
        <% if (user) { %>
            <h1>My Friends</h1>
            
            <div class="search-container">
                <input type="text" placeholder="Search for a friend..." class="search-input">
            </div>

            <div class="friends-container">
                <% user.friends.forEach((friend) => { %>
                    <div class="friend" onclick="location.href='friends/view-friend/<%= friend.id %>'">
                        <%= friend.name %>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <h1>Welcome, please log in or register.</h1>
            <a href="/login">Login</a> | <a href="/register">Register</a>
        <% } %>
        <button id="add-friends-btn" onclick="location.href='/friends/add-friend'">Add Friends</button>
    </div>
    <%- include('../partials/navbar') %>
</body>
</html>
