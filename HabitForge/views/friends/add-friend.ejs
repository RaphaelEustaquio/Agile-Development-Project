<!DOCTYPE html>
<html>
<head>
    <title>Add Friend</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('../partials/top-navbar', { pageTitle: 'Add Friend', currentPage: 'add-friend' }) %>
    <div class="container">
        <% if (user) { %>
            <h1>Add Friend</h1>
            <div class="search-container">
                <form method="POST" action="/friends/search">
                    <input type="text" placeholder="Search for a friend..." name="search" class="search-input">
                </form>
            </div>
            <!-- Search results will be displayed here -->
        <% } else { %>
            <h1>Welcome, please log in or register.</h1>
            <a href="/login">Login</a> | <a href="/register">Register</a>
        <% } %>
    </div>
    <% if (searchResults) { %>
      <div class="search-results">
        <h2>Search Results:</h2>
        <% searchResults.forEach(result => { %>
          <div class="search-result">
            <button onclick="location.href='/friends/follow/<%= result.id %>'" id="follow-btn"><%= result.name %> (<%= result.email %>) Follow</button>
          </div>
        <% }) %>
      </div>
    <% } %>
    <%- include('../partials/navbar') %>
</body>
</html>
